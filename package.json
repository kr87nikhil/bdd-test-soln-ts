{
  "name": "bdd-test-soln-ts",
  "version": "1.0.0",
  "description": "TypeScript solution for Test Automation",
  "exports": "./index.ts",
  "scripts": {
    "cy:lint": "eslint cypress --ext .ts",
    "cy:run": "cypress run --reporter mochawesome --reporter-options consoleReporter=none,html=false,reportDir=cypress/results/json/,reportFilename=[datetime]-[name]-report,timestamp=shortDate",
    "cy:merge:json": "mochawesome-merge cypress/results/json/*.json > cypress/results/cy-demo-mochawesome.json",
    "cy:report:html": "marge -t Demo-Cypress -f [datetime]-cy-demo-report --ts shortDate -o cypress/results/ --no-code cypress/results/cy-demo-mochawesome.json",
    "axios:lint": "eslint web-service --ext .ts",
    "axios:run": "mocha -u bdd --colors --reporter mochawesome --require mochawesome/register --reporter-options html=false,reportFilename=[datetime]-smartphone-report,timestamp=mediumDate dist/spec/smartphone.spec.js",
    "axios:report:html": "marge -t Demo-Axios -f [datetime]-[name]-report --ts mediumDate --charts true --no-code mochawesome-report/*.json"
  },
  "type": "module",
  "keywords": [
    "API",
    "Web App",
    "BDD Test",
    "Automation solution"
  ],
  "author": "Nikhil Kumar",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@hyperjump/json-schema": "^1.7.3",
    "axios": "^1.6.8",
    "chai": "^5.1.0",
    "cypress": "^13.8.1",
    "dotenv": "^16.4.5",
    "mocha": "^10.3.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/cypress": "^1.1.3",
    "@types/mocha": "^10.0.6",
    "@types/mochawesome": "^6.2.4",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2"
  }
}
